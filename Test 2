        :WaitForChild("Events", 9e9):GetChildren()[9]:FireServer(unpack(args))
end)

-- === Lunar Island Special Teleport Positions ===
local lunarPositions = {
    Vector3.new(-3097.421875, 17.63089942932129, -3681.2919921875),
    Vector3.new(-2759.49609375, 6.74829626083374, -2589.205810546875),
    Vector3.new(-2207.140380859375, 139.0631866455078, -1223.9427490234375),
    Vector3.new(-3266.90771484375, 15.430882453918457, -1436.565673828125),
    Vector3.new(-3357.76318359375, 24.348201751708984, -2428.62890625),
}

-- === Volcano Island Special Teleport Positions ===
local volcanoPositions = {
    Vector3.new(2964.748291015625, 108.94522857666016, -7078.3603515625),
    Vector3.new(4134.52197265625, 27.04894256591797, -6894.68603515625),
    Vector3.new(4757.5205078125, 26.138153076171875, -7939.00634765625),
    Vector3.new(3487.487548828125, 20.9999942779541, -8586.859375),
}

-- === Exclusions for Lunar and Volcano Island (same universal exclusions) ===
local specialExclusions = universalExclusions

-- === Lunar Island Teleport Toggle ===
local lunarToggle = false
LunarVolcanoSection:NewToggle("Lunar Island Teleport", "Special teleport for Lunar Island", function(state)
    lunarToggle = state
    if lunarToggle then
        task.spawn(function()
            local index = 1
            while lunarToggle do
                local pos = lunarPositions[index]
                -- Teleport to pos
                hrp.CFrame = CFrame.new(pos + Vector3.new(0, 5, 0))
                -- Wait up to 15 seconds or until no "Body" parts in the folder
                local folder = islandsFolder:FindFirstChild("Lunar Islands") or (explorerFolder and explorerFolder:FindFirstChild("Lunar Islands"))
                local waitTime = 0
                while waitTime < 15 and lunarToggle do
                    if not folder then break end
                    local bodiesExist = false
                    for _, model in ipairs(folder:GetChildren()) do
                        if specialExclusions[model.Name] then continue end
                        local body = model:FindFirstChild("Body")
                        if body and body:IsDescendantOf(workspace) then
                            bodiesExist = true
                            break
                        end
                    end
                    if not bodiesExist then
                        break
                    end
                    waitTime = waitTime + 0.5
                    task.wait(0.5)
                end
                if not lunarToggle then break end
                index = index + 1
                if index > #lunarPositions then index = 1 end
            end
        end)
    end
end)

-- === Volcano Island Teleport Toggle ===
local volcanoToggle = false
LunarVolcanoSection:NewToggle("Volcano Island Teleport", "Special teleport for Volcano Island", function(state)
    volcanoToggle = state
    if volcanoToggle then
        task.spawn(function()
            local index = 1
            while volcanoToggle do
                local pos = volcanoPositions[index]
                -- Teleport to pos
                hrp.CFrame = CFrame.new(pos + Vector3.new(0, 5, 0))
                -- Wait up to 15 seconds or until no "Body" parts in the folder
                local folder = islandsFolder:FindFirstChild("Volcano Island") or (explorerFolder and explorerFolder:FindFirstChild("Volcano Island"))
                local waitTime = 0
                while waitTime < 15 and volcanoToggle do
                    if not folder then break end
                    local bodiesExist = false
                    for _, model in ipairs(folder:GetChildren()) do
                        if specialExclusions[model.Name] then continue end
                        local body = model:FindFirstChild("Body")
                        if body and body:IsDescendantOf(workspace) then
                            bodiesExist = true
                            break
                        end
                    end
                    if not bodiesExist then
                        break
                    end
                    waitTime = waitTime + 0.5
                    task.wait(0.5)
                end
                if not volcanoToggle then break end
                index = index + 1
                if index > #volcanoPositions then index = 1 end
            end
        end)
    end
end)
