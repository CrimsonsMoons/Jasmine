local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Setup checkpoints folder path
local checkpointsFolder = workspace:Islands():WaitForChild("Training Island"):WaitForChild("Outdoor Arena"):WaitForChild("DynamicArena"):WaitForChild("_LAYOUT"):WaitForChild("CheckpointActivity"):WaitForChild("Routes"):WaitForChild("1")

-- Static known UUIDs
local staticUUIDs = {
    "{60f828f4-a916-4262-842e-7ddc49e07ad9}",
    "{c5769905-aecf-4d7a-ada9-064802b0cae9}",
    "{d2227f02-c482-4911-b201-7e842b31c47c}",
    "{6b019e60-21c6-4536-9a06-4cbfee80d88f}",
    "{12916ad6-7fd9-46d5-8bc1-e69671249721}"
}

-- UUID pattern checker (checks for {} wrapper)
local function isUUID(str)
	return string.match(str, "^%b{}$") ~= nil
end

-- Collect NPC models from Training Island dynamically + statics
local function getNPCs()
    local folder = workspace:Islands:WaitForChild("Training Island")
    local npcList = {}

    -- Add static UUIDs first
    for _, uuid in ipairs(staticUUIDs) do
        local model = folder:FindFirstChild(uuid)
        if model and model:IsA("Model") then
            local root = model:FindFirstChild("HumanoidRootPart") or model:FindFirstChildWhichIsA("BasePart")
            if root then
                model.PrimaryPart = root
                table.insert(npcList, model)
            end
        end
    end

    -- Add dynamically found UUID-named models with Humanoid (excluding statics)
    for _, model in ipairs(folder:GetDescendants()) do
        if model:IsA("Model") and isUUID(model.Name) and not table.find(staticUUIDs, model.Name) then
            if model:FindFirstChildWhichIsA("Humanoid") then
                local root = model:FindFirstChild("HumanoidRootPart") or model:FindFirstChildWhichIsA("BasePart")
                if root then
                    model.PrimaryPart = root
                    table.insert(npcList, model)
                end
            end
        end
    end

    return npcList
end

-- GUI setup, same style and position as your example
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TeleportToggleGui"
screenGui.Parent = PlayerGui
screenGui.ResetOnSpawn = false

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 140, 0, 50)
button.Position = UDim2.new(0, 20, 0, 20)
button.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
button.TextColor3 = Color3.new(1, 1, 1)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 24
button.Text = "Start Teleport"
button.Parent = screenGui

-- Teleport logic
local running = false
local teleportTask

local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local HRP = Character:WaitForChild("HumanoidRootPart")

local checkpointOrder = {"1", "2", "3", "4", "5", "6"}

local function teleportToCheckpoint(checkpointName, npcs)
    local checkpoint = checkpointsFolder:FindFirstChild(checkpointName)
    if not checkpoint or not checkpoint:IsA("BasePart") then return end

    -- Calculate inside position offset:
    local insideCFrame = checkpoint.CFrame * CFrame.new(0, -checkpoint.Size.Y/2 + 1, 0) * CFrame.new(0, 0, 1.5)

    -- Teleport player 2 studs above inside spot
    HRP.CFrame = insideCFrame * CFrame.new(0, 2, 0)

    -- Teleport all UUID NPCs inside, offset -2 studs left, 3 up
    for _, npc in ipairs(npcs) do
        if npc.PrimaryPart then
            npc:SetPrimaryPartCFrame(insideCFrame * CFrame.new(-2, 3, 0))
        end
    end
end

local function startLoop()
    teleportTask = task.spawn(function()
        local npcs = getNPCs()
        while running do
            for i, checkpointName in ipairs(checkpointOrder) do
                if not running then break end
                teleportToCheckpoint(checkpointName, npcs)
                task.wait(2)  -- wait 2 seconds between teleports
            end
        end
    end)
end

button.MouseButton1Click:Connect(function()
    running = not running
    button.Text = running and "Stop Teleport" or "Start Teleport"
    if running then
        startLoop()
    end
end)
