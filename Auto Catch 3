local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")

local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local Root = Character:WaitForChild("HumanoidRootPart")

local TOOL_UUID = "{cd4c34c5-99a6-4f28-ac73-bfad7c8e1ca2}" -- Just use 1 for test
local remote = ReplicatedStorage:WaitForChild("Communication"):WaitForChild("Events"):GetChildren()[13]

local islandFolders = {
    "Lunar Islands",
    "Volcano Island",
    "Jungle Island"
}

local function isUUID(name)
    return typeof(name) == "string" and name:match("^%b{}$") ~= nil
end

-- Try capture one animal
for _, islandName in ipairs(islandFolders) do
    local island = Workspace:FindFirstChild("Islands"):FindFirstChild(islandName)
    if island then
        for _, model in ipairs(island:GetChildren()) do
            if isUUID(model.Name) and model:FindFirstChild("Body") then
                local dist = (model.Body.Position - Root.Position).Magnitude
                if dist <= 15 then
                    remote:FireServer(TOOL_UUID, "Activate", model)
                    print("✅ Fired on", model.Name, "in", islandName)
                    return
                end
            end
        end
    end
end

print("❌ No valid nearby targets found.")
